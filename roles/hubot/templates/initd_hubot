#!/bin/bash
# hubot
# chkconfig: 345 20 80
# description: hubot
# processname: hubot

# {{ cfg_managed }}

# This script assumes you have a user called "{{ name }}" on your system and that hubot is installed in /opt/{{ name }}

# Save Environement Variables in /opt/{{ name }}/hubot.env
HUBOT_VARS=/opt/{{ name }}/hubot.env

DAEMON="/opt/{{ name }}/bin/hubot.sh"
DAEMONOPTS="--name {{ name }} --adapter {{ adapter }}"

NAME={{ name }}
USER={{ name }}
DESC="{{ name }}"
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

case "$1" in
    start)
        printf "%-50s" "Starting $DESC..."
        PID=`runuser -c ". $HUBOT_VARS && cd /opt/{{ name }} && $DAEMON $DAEMONOPTS" - $USER  >> /var/log/{{ name }}.log 2>&1 & echo $!`
        echo $PID > /var/run/$NAME.pid
        if [ -z $PID ]; then
            printf "%s\n" "Fail"
        else
            echo $PID > $PIDFILE
            printf "%s\n" "Ok"
        fi
    ;;
    status)
        printf "%-50s" "Checking $DESC..."
        if [ -f $PIDFILE ]; then
            PID=`cat $PIDFILE`
            if [ -z "`ps axf | grep ${PID} | grep -v grep`" ]; then
                printf "%s\n" "Process dead but pidfile exists"
            else
                echo "Running"
            fi
        else
            printf "%s\n" "Service not running"
        fi
    ;;
    stop)
        printf "%s\n" "Stopping $DESC"
        for pid in $( ps aux | grep "/opt/{{ name }}" | grep -v grep | awk '{print $2}' ); do
            kill -9 $pid
        done
        rm -fr $PIDFILE
    ;;
    restart)
        $0 stop
        $0 start
    ;;
    *)
        echo "Usage: $0 {status|start|stop|restart}"
        exit 1
esac